<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ContactItemView">
        <attr name="contactItemImage" format="reference"/>
        <attr name="contactItemName" format="string|reference"/>
        <attr name="contactItemBottomLineMarginLeft" format="dimension"/>
        <attr name="contactItemBottomLineMarginRight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ArrowItemView">
        <attr name="arrowItemTitle" format="string|reference"/>
        <attr name="arrowItemTitleColor" format="color|reference"/>
        <attr name="arrowItemTitleSize" format="dimension|reference"/>
        <attr name="arrowItemContent" format="string|reference"/>
        <attr name="arrowItemContentColor" format="color|reference"/>
        <attr name="arrowItemContentSize" format="dimension|reference"/>
        <attr name="arrowItemShowDivider" format="boolean"/>
        <attr name="arrowItemShowArrow" format="boolean"/>
        <attr name="arrowItemShowAvatar" format="boolean"/>
        <attr name="arrowItemAvatarSrc" format="reference"/>
        <attr name="arrowItemAvatarHeight" format="dimension|reference"/>
        <attr name="arrowItemAvatarWidth" format="dimension|reference"/>
    </declare-styleable>

    <declare-styleable name="SwitchItemView">
        <attr name="switchItemTitle" format="string|reference"/>
        <attr name="switchItemTitleColor" format="color|reference"/>
        <attr name="switchItemTitleSize" format="dimension|reference"/>
        <attr name="switchItemShowDivider" format="boolean"/>
        <attr name="switchItemHint" format="string|reference"/>
        <attr name="switchItemCheckEnable" format="boolean"/>
        <attr name="switchItemClickable" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="EaseChatMessageList">
        <attr name="msgListMyBubbleBackground" format="reference"/>
        <attr name="msgListOtherBubbleBackground" format="reference"/>
        <attr name="msgListShowUserAvatar" format="boolean"/>
        <attr name="msgListShowUserNick" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="EaseConversationList">
        <attr name="cvsListPrimaryTextColor" format="color"/>
        <attr name="cvsListSecondaryTextColor" format="color"/>
        <attr name="cvsListTimeTextColor" format="color"/>
        <attr name="cvsListPrimaryTextSize" format="dimension"/>
        <attr name="cvsListSecondaryTextSize" format="dimension"/>
        <attr name="cvsListTimeTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="EaseContactList">
        <attr name="ctsListPrimaryTextColor" format="color"/>
        <attr name="ctsListPrimaryTextSize" format="dimension"/>
        <attr name="ctsListShowSiderBar" format="boolean"/>
        <attr name="ctsListInitialLetterBg" format="reference|color"/>
        <attr name="ctsListInitialLetterColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="EaseEmojiconMenu">
        <attr name="bigEmojiconRows" format="integer"/>
        <attr name="emojiconColumns" format="integer"/>
    </declare-styleable>

    <declare-styleable name="EaseChatExtendMenu">
        <attr name="numColumns" format="integer"/>
    </declare-styleable>

    <declare-styleable name="EaseTitleBar">
        <attr name="titleBarTitle" format="string"/>
        <attr name="titleBarLeftImage" format="reference"/>
        <attr name="titleBarRightImage" format="reference"/>
        <attr name="titleBarBackground" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="EaseSwitchButton">
        <attr name="switchOpenImage" format="reference"/>
        <attr name="switchCloseImage" format="reference"/>
        <attr name="switchStatus">
            <enum name="open" value="0"/>
            <enum name="close" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="EaseImageView">
        <attr name="ease_border_color" format="color" />
        <attr name="ease_border_width" format="dimension" />
        <attr name="ease_press_alpha" format="integer" />
        <attr name="ease_press_color" format="color" />
        <attr name="ease_radius" format="dimension" />
        <attr name="ease_shape_type" format="enum">
            <enum name="none" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MyChronometer">
        <!-- Format string: if specified, the Chronometer will display this
             string, with the first "%s" replaced by the current timer value
             in "MM:SS" or "H:MM:SS" form.
             If no format string is specified, the Chronometer will simply display
             "MM:SS" or "H:MM:SS". -->
        <attr name="format" format="string" localization="suggested" />
        <!-- Specifies whether this Chronometer counts down or counts up from the base.
              If not specified this is false and the Chronometer counts up. -->
        <attr name="countDown" format="boolean" />
    </declare-styleable>
</resources>