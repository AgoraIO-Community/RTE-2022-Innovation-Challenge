<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Material Design theme. -->
    <style name="Theme.MaterialDialog" parent="Theme.MaterialComponents.Light">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- Theme for BottomSheetDialog -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_back</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
    </style>

    <style name="MaterialDialog">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- Theme for Dialog Title -->
    <style name="MaterialDialog.Title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/material_dialog_title_text_color</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- Theme for Dialog Message -->
    <style name="MaterialDialog.Message">
        <item name="android:textSize">@dimen/text_message_size</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/material_dialog_message_text_color</item>
    </style>

    <!-- Theme for Dialog Positive Button -->
    <style name="MaterialDialog.PositiveButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.025</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Theme for Dialog Negative Button -->
    <style name="MaterialDialog.NegativeButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_margin">4dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.025</item>
        <item name="android:textAllCaps">false</item>

    </style>

</resources>