<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@android:color/transparent" android:state_window_focused="false" />

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:drawable="@drawable/ic_spinner_dropdown_item_background" android:state_checked="true" />
    <item android:drawable="@drawable/ic_spinner_dropdown_item_background" android:state_pressed="true" />
</selector>