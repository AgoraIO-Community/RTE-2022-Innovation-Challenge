<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg2"
    tools:context=".ui.main.MainFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginTop="53dp"
        android:text="爱声爱人"
        android:textColor="#ff8342e4"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_marginTop="54dp"
        android:src="@mipmap/girl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/medal"
        app:layout_constraintBottom_toBottomOf="@+id/avatar"
        app:layout_constraintEnd_toEndOf="@+id/avatar" />

    <EditText
        android:id="@+id/nickname"
        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_marginTop="57dp"
        android:background="@drawable/ic_edittext_background"
        android:drawableStart="@mipmap/user_fill"
        android:drawablePadding="14dp"
        android:hint="请输入昵称"
        android:maxLength="10"
        android:paddingHorizontal="30dp"
        android:singleLine="true"
        android:textColor="#ffa18bb0"
        android:textColorHint="#ffa18bb0"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar" />

    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="3dp"
        android:text="请输入2-10个字符"
        android:textColor="#ffff6969"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/nickname"
        app:layout_constraintTop_toBottomOf="@+id/nickname" />

    <EditText
        android:id="@+id/sex"
        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/ic_edittext_background"
        android:drawableStart="@mipmap/user_star_fill"
        android:drawableEnd="@mipmap/arrow_down"
        android:drawablePadding="14dp"
        android:editable="false"
        android:hint="请选择性别"
        android:paddingHorizontal="30dp"
        android:textColor="#ffa18bb0"
        android:textColorHint="#ffa18bb0"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickname" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:dropDownWidth="275dp"
        android:dropDownVerticalOffset="62dp"
        android:popupBackground="@drawable/ic_spinner_dropdown_background"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/sex"
        app:layout_constraintEnd_toEndOf="@+id/sex"
        app:layout_constraintStart_toStartOf="@+id/sex"
        app:layout_constraintTop_toTopOf="@+id/sex" />

    <ImageButton
        android:id="@+id/enter"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="99dp"
        android:background="@null"
        android:src="@mipmap/enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sex" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="11dp"
        android:alpha="0.41"
        android:text="进入"
        android:textColor="#d9f9f9f9"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="40dp"
        android:alpha="0.51"
        android:text="Agora.io"
        android:textColor="#d9ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>