<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <com.agora.crane.widget.CircleImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="@dimen/sw_100dp"
        android:layout_height="@dimen/sw_100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/sw_50dp"
        android:src="@mipmap/logo"
        />

    <TextView
        android:id="@+id/tv_login_app_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw_40dp"
        android:layout_marginTop="@dimen/sw_10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/sw_20sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/iv_login_logo"
        />


    <TextView
        android:id="@+id/tv_login_account"
        android:layout_width="@dimen/sw_300dp"
        android:layout_height="@dimen/sw_40dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_login_logo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/sw_30dp"
        android:layout_marginTop="@dimen/sw_150dp"
        android:gravity="center|start"
        android:textSize="@dimen/sw_15sp"
        android:hint="@string/account"
        android:paddingStart="@dimen/sw_20dp"
        android:paddingEnd="0px"
        android:background="@drawable/bg_gray_0_radius_20"
        />

    <EditText
        android:id="@+id/et_account"
        android:layout_width="@dimen/sw_200dp"
        android:layout_height="@dimen/sw_40dp"
        app:layout_constraintTop_toTopOf="@+id/tv_login_account"
        app:layout_constraintStart_toStartOf="@+id/tv_login_account"
        android:layout_marginStart="@dimen/sw_65dp"
        android:hint="@string/input_account"
        android:textSize="@dimen/sw_15sp"
        android:background="@null"
        />

    <ImageView
        android:id="@+id/iv_login_clean_account"
        android:layout_width="@dimen/sw_25dp"
        android:layout_height="@dimen/sw_25dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_login_account"
        app:layout_constraintTop_toTopOf="@+id/tv_login_account"
        app:layout_constraintBottom_toBottomOf="@+id/tv_login_account"
        android:layout_marginEnd="@dimen/sw_15dp"
        android:src="@drawable/icon_close"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_login_password"
        android:layout_width="@dimen/sw_300dp"
        android:layout_height="@dimen/sw_40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_account"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/sw_30dp"
        android:layout_marginTop="@dimen/sw_30dp"
        android:gravity="center|start"
        android:textSize="@dimen/sw_15sp"
        android:hint="@string/password"
        android:paddingStart="@dimen/sw_20dp"
        android:paddingEnd="0px"
        android:background="@drawable/bg_gray_0_radius_20"
        />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="@dimen/sw_200dp"
        android:layout_height="@dimen/sw_40dp"
        app:layout_constraintTop_toTopOf="@+id/tv_login_password"
        app:layout_constraintStart_toStartOf="@+id/tv_login_password"
        android:layout_marginStart="@dimen/sw_65dp"
        android:hint="@string/input_password"
        android:textSize="@dimen/sw_15sp"
        android:background="@null"
        android:inputType="textPassword"
        />

    <ImageView
        android:id="@+id/iv_login_clean_password"
        android:layout_width="@dimen/sw_25dp"
        android:layout_height="@dimen/sw_25dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_login_password"
        app:layout_constraintTop_toTopOf="@+id/tv_login_password"
        app:layout_constraintBottom_toBottomOf="@+id/tv_login_password"
        android:layout_marginEnd="@dimen/sw_15dp"
        android:src="@drawable/icon_close"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="@dimen/sw_300dp"
        android:layout_height="@dimen/sw_40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_password"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/sw_30dp"
        android:layout_marginTop="@dimen/sw_50dp"
        android:gravity="center"
        android:textSize="@dimen/sw_15sp"
        android:background="@drawable/bg_gray_0_radius_20"
        android:text="@string/login"
        />

    <TextView
        android:id="@+id/tv_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_login"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/sw_30dp"
        android:layout_marginTop="@dimen/sw_10dp"
        android:gravity="center"
        android:textSize="@dimen/sw_13sp"
        android:text="@string/register_account"
        android:padding="@dimen/sw_10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>