<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="layout_video">
        <attr name="text_direction" format="string" />
    </declare-styleable>

    <!--圆角或者圆形图片组件-->
    <declare-styleable name="CircleImageView">
        <attr name="ease_border_color" format="color" />
        <attr name="ease_border_width" format="dimension" />
        <attr name="ease_press_alpha" format="integer" />
        <attr name="ease_press_color" format="color" />
        <attr name="ease_radius" format="dimension" />
        <attr name="es_shape_type" format="enum">
            <enum name="none" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="layout_title">
        <attr name="title" format="string" />
        <attr name="title_right" format="string" />
        <attr name="icon_left" format="reference|color" />
        <attr name="icon_right" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="layout_item">
        <attr name="item_title" format="string" />
        <attr name="item_icon" format="reference|color" />
    </declare-styleable>


</resources>