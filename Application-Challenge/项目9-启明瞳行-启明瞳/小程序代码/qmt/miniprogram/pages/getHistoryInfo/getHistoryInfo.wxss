/* miniprogram/pages/askhelp.wxss */

.head {
  position: fixed;
  margin-top: 10rpx;
  width: 100%;
  padding: 8px;
  display: flex;
  justify-content: space-around;
  background-color: #f5f5f5;
}

.tab-item {
  margin: 0 48rpx;
  display: inline-block;
}

.tab-item.active {
  color: black;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 126rpx;
  background: #34a853;
  position: absolute;
  bottom: 2rpx;
  border-radius: 100rpx;
}

/* 底部菜单的布局 */

.foot {
  position: fixed;
  bottom: 0px;
  width: 100%;
  padding: 8px;
  display: flex;
  justify-content: space-around;
  background-color: #f5f5f5;
}

textarea {
  width: 700rpx;
  padding: 25rpx 0;
}

.textarea-wrp {
  padding: 0 25rpx;
  background-color: #fff;
}

.tab-content {
  margin-top: 80rpx;
}

.scoll-h {
  height: 100%;
}

znsbItem {
  background-color: #000;
  height: 100%;
  position: fixed;
}

.coverview {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.list {
  position: relative;
  width: 100%;
  background: none;
  border: none;
  flex: 1;
  font-size: 56rpx;
}

.micro-img {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  display: inline-block;
}

.intro-text {
  width: 100%;
  height: 100%;
  position: absolute;
}

/* pages/chat/chat.wxss */
@import "/style/weui.wxss";

page {
  height: 100%;
  position: fixed;
}

image {
  width: 240px;
}

.bottom-content {
  position: fixed;
  bottom: 1rpx;
  padding-left: 30rpx;
  width: 100%;
}

.result {
  width: 100%;
  position: fixed;
  bottom: 160rpx;
  display: flex;
  align-items: center;
  font-size: 35rpx;
  background-color: gray;
}
.ask-input-word {
  width: 100%;
  position: fixed;
  bottom: 1rpx;
  display: flex;
  align-items: center;
  font-size: 35rpx;
  background-color: gray;
}

.weui-grid {
  position: relative;
  float: left;
  margin-top: 2rpx;
  padding: 0px 0px 0px 0px;
  width: 16.67%;
  height: 150rpx;
  box-sizing: border-box;
  background-size: cover;
}

.bottom-item {
  /* float:left; */
  width: 18%;
  height: 70rpx;
  border-radius: 10rpx;
}

.bottom-view {
  padding: 0 0 0 4rpx;
  font-size: 5rpx;
  line-height: 100rpx;
  justify-content: center;
  word-break: break-all;
  align-items: center;
  white-space: nowrap;
  text-align: center;
  position: absolute;
  color: black;
  width: 18%;
  bottom: 1%;
}

.bottom-contact {
  padding: 0 0 0 4rpx;
  font-size: 1rpx;
  line-height: 100rpx;
  justify-content: center;
  word-break: break-all;
  align-items: center;
  white-space: nowrap;
  text-align: center;
  position: absolute;
  color: black;
  width: 14%;
  bottom: 1%;
  opacity: 0;
}

/* //opacity: 0; */

.container {
  width: 750rpx;
  min-height: 90%;
  margin-bottom: 30rpx;
  position: fixed;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding: 15rpx;
  background-color: #d9d9d9;
}

.chat-list {
  flex: 1;
  padding-bottom: 80rpx;
}

.scrool-view {
  height: 85%;
  padding-bottom: 20rpx;
  width: 100%;
  float: fixed;
  background-color: #d9d9d9;
}

.chat-left {
  margin-top: 20rpx;
  width: 100%;
  float: left;
}

.avatar-img-left {
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
  float: left;
}

.chat-text-left {
  margin-left: 110rpx;
  margin-right: 110rpx;
  /* flex: 1; *//* padding: 5rpx 10rpx; */
  background-color: #a0e959;
  border-radius: 11rpx;
  /* word-break: break-all; *//* float: left; */
  margin-bottom: 10rpx;
  line-height: 40rpx;
  padding: 25rpx 25rpx 25rpx 25rpx;
}

.chat-right {
  /* display: flex; *//* align-items: center; */
  margin-top: 20rpx;
  float: right;
  width: 100%;
}

.chat-text-right {
  /* flex: 1; */
  margin-right: 10rpx;
  margin-left: 50rpx;
  background-color: #fff;
  border-radius: 11rpx;
  word-break: break-all;
  float: right;
  width: 70%;
  margin-bottom: 10rpx;
  padding: 25rpx 25rpx 25rpx 25rpx;
}

.chat-voice-right {
  /* flex: 1; */
  margin-right: 10rpx;
  margin-left: 50rpx;
  background-color: #d9d9d9;
  border-radius: 11rpx;
  word-break: break-all;
  float: right;
  width: 70%;
  margin-bottom: 10rpx;
}

.avatar-img-right {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  float: right;
}

.request-img-wrapper {
  width: 240px;
  height: 240px;
  float: right;
  margin-right: 16rpx;
}

.request-img {
  float: right;
  width: 100%;
  height: 100%;
}

.text-video-img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 60rpx;
  margin-left: 5px;
}

.camera-album {
  width: 100rpx;
  height: 100rpx;
  border-radius: 60rpx;
  margin-right: 5px;
}



.ask-input-word input {
  background: white;
  border: #ddd 1rpx solid;
  border-radius: 3rpx;
  flex: 1;
  margin-right: 10rpx;
  height: 90rpx;
  min-height: 2rem;
}

.ask-input-word button {
  height: 2.8rem;
  min-height: 2rem;
  font-size: 22px;
  padding: 0 0.34em;
  width: 100%;
  text-align: center;
  position: relative;
  display: block;
  margin-left: auto;
  margin-right: auto;
  padding-left: 16px;
  padding-right: 16px;
  box-sizing: border-box;
  text-decoration: none;
  color: #fff;
  line-height: 2rem;
  border-radius: 5px;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  overflow: hidden;
  background-color: #09bb07;
}

.button-hover {
  background-color: #ccc;
}

.button-send {
  background-color: red;
}

.pos-rel {
  position: relative;
}

.pos-abs {
  position: absolute;
}

.olami-info {
  font-size: 10px;
  align-items: right;
}

.speaker {
  position: fixed;
  left: 50%;
  top: 50%;
  margin-top: -50px;
  margin-left: -50px;
  width: 30%;
  height: 20%;
}

.showAuthor {
  display: inline-flex;
  flex-direction: row;
  justify-content: flex-end;
}

.author {
  text-align: right;
  margin-left: 19%;
}

.page-wrap {
  display: flex;
  flex-direction: column;
  background: #ebebeb;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: hidden;
}

.chat-container {
  flex: 1;
  text-align: center;
  overflow-y: auto;
}

.input-panel {
  height: 100rpx;
  bottom: 80rpx;
  box-sizing: border-box;
  padding: 13rpx 20rpx 0;
  background: #f5f5f7;
  border-top: #d7d7d9 1rpx solid;
  box-sizing: border-box;
  display: flex;
}

.send-btn {
  margin-left: 25rpx;
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #a0e75a;
  font-size: 28rpx;
}

.message-input {
  flex-shrink: 0;
  width: 100%;
}