/**qmt.wxss**/

page {
  background-color: #000;
  height: 100%;
  position: fixed;
}
cover-view {
  line-height: 1;
}
.coverview {
  width: 100%;
  display: flex;
  z-index: 9999;
  flex-direction: column;
  height: 100%;
}

.list, .inner-list{
  position: relative;
  width: 100%;
  height: 100%;
  background: none;
  border: none;
  font-size: 50rpx;
}
.list {
  flex: 1;
}

.icon-menu {
  display: flex;
  justify-content: space-around;
  flex-wrap: nowrap;
  background-color: #000;
  height: 120rpx;
}
.icon-menu button {
  padding:0;
  margin:0;
  background:none;
  height: 90%;
  width: 90%;
}
.icon-menu image {
  width: 100%;
  height: 100%;
}