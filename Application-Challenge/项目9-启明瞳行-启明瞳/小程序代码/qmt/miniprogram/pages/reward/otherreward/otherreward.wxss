page {
  height: 100%;
  background-color: rgba(0, 0, 0, 0.05);  /* todo: 不知道是啥颜色 */
}

.page {
  height: 100%;
}

.page_bd {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.ic_qmt {
  border-radius: 90px;
  width: 48px;
  height: 48px;
  margin: 0px;
}

.zjn_text {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  font-size: small;
  margin-top: 4px;
}

.reward_input_container {
  position: relative;
  width: 90%;
  height: 56px;
  margin-top: 16px;
  background-color: white;
}

.reward_input {
  width: 90%;
  height: 56px;
  text-align: right;
}

.reward_unit {
  position: absolute;
  right: 8px;
  top: 15px;
}

.submit_button_container {
  position: absolute;
  bottom: 48px;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 48px;
}

.submit_button {
  width: 160px;
  height: 48px;
  background-color: orange;
  color: white;
  border: none;
}