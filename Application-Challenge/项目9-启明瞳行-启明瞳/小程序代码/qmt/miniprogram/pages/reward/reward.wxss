/* miniprogram/pages/reward/reward.wxss */
page {
  height: 100%;
}

.page {
  height: 100%;
}

.page_bd {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.ic_qmt {
  border-radius: 90px;
  width: 48px;
  height: 48px;
  margin: 0px;
}

.zjn_text {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  font-size: small;
  margin-top: 4px;
}

.zjn_word_text {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 8px;
  font-weight: 600;
  font-size: larger;
}

.reward_text {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-top: 16px;
  margin-bottom: 4px;
  font-size: small;
}

.reward_item_row_container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.reward_item_container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 88px;
  height: 48px;
  margin-left: 4px;
  margin-right: 4px;
  margin-top: 3px;
  margin-bottom: 3px;
  border-style: solid;
  border-width: 2px;
  border-radius: 4px;
  border-color: orange;
}

.other_text {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  color: lightskyblue;
  font-size: small;
  margin-top: 4px;
}

.other_input {
  width: 88px;
  height: 48px;
  margin-top: 3px;
  margin-bottom: 3px;
  border-style: solid;
  border-width: 2px;
  border-radius: 4px;
  border-color: orange;
}

.receive_text {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  position: absolute;
  bottom: 64px;
  color: grey;
  font-size: small;
}