
.container{
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #fafafa;
}
.head{
    position: fixed;
    width: 100%;
    padding: 8px;
    display: flex;
    justify-content: space-around;
    background-color: #f5f5f5;
}
.word_icon{
    width: 32px;
    height: 32px;
}
.content_container{
    justify-content: center;
    width: 90%;
    max-height: 80%;
    margin-top: 10px;
}
.content{
    padding-top: 32px;
    padding-bottom: 32px;
}
.share_icon{
    width: 32px;
    height: 32px;
}
.sound_icon{
    width: 32px;
    height: 32px;
}
.copy_icon{
    width: 32px;
    height: 32px;
}
.foot{
    position: fixed;
    bottom: 0;
    width: 100%;
    padding: 8px;
    display: flex;
    justify-content: space-around;
    background-color: #f5f5f5;
}