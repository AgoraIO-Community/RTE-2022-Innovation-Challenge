
.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
}
.head{
  position: fixed;
  width: 100%;
  padding: 8px;
  display: flex;
  justify-content: space-around;
  background-color: #f5f5f5;
}
.word_icon{
  width: 32px;
  height: 32px;
}
.content_container{
  display: flex;
  justify-content: center;
  width: 100%;
  max-height: 80%;
}
.content{
  padding-top: 32px;
  padding-bottom: 32px;
}
.share_icon{
  width: 32px;
  height: 32px;
}
.sound_icon{
  width: 32px;
  height: 32px;
}
.copy_icon{
  width: 32px;
  height: 32px;
}
.foot{
  position: fixed;
  bottom: 0px;
  width: 100%;
  padding: 8px;
  display: flex;
  justify-content: space-around;
  background-color: black;
}